{
  "name": "adbm",
  "version": "1.2.1",
  "description": "Simple, pluggable async database migration tool for node.js >= 7.6.0",
  "main": "index.js",
  "engines": {
    "node": ">=7.6.0"
  },
  "scripts": {
    "docker:db": "docker start adbm_dev_db || docker run --name adbm_dev_db -p 27017:27017 -d mongo:3.4",
    "preversion": "npm run lint && npm run test",
    "lint": "standard",
    "test": "mocha --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daerion/adbm.git"
  },
  "keywords": [
    "database",
    "mongo",
    "mongodb",
    "migration",
    "rethinkdb"
  ],
  "author": "Michael Smesnik <ms@tailored-apps.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daerion/adbm/issues"
  },
  "homepage": "https://github.com/daerion/adbm#readme",
  "devDependencies": {
    "adbm-mongodb": "^1.0.4",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "mongodb": "^2.2.35",
    "prettier-standard": "^8.0.1",
    "sinon": "^7.4.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "bluebird": "^3.5.5"
  }
}
